<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :email %>

    <%= f.input :formally %>
    <%= f.input :gender, as: :select, collection: ["male", "female"], include_blank: false %>
    <%= f.input :consent %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
