  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td>
          <%= client.firstname %> <%= client.lastname %>
        </td>
        <td>
          <%= client.email %>
        </td>
        <td>
          <%= client.consent %>
        </td>
        <td>
          <%= link_to "Subscription", client_path(client, format: :ics, protocol: 'webcal', only_path: false, auth_token: client.authentication_token) %>
