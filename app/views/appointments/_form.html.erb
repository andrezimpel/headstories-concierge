<%= simple_form_for(@appointment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: { value: 'Friseur' } %>
    <%= f.input :start, as: :string, placeholder: 'Beginn' %>
    <%= f.input :end, as: :string, placeholder: 'Ende' %>
    <%= f.input :notes %>
    <%= f.association :client, include_blank: false, :label_method => lambda { |owner| "#{owner.firstname} #{owner.lastname}" } %>
    <%#= f.input :alerts %>
    <%#= f.input :url %>
    <%#= f.input :calendar_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
