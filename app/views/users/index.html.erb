<div class="page-header">
  <%= link_to "Invite", new_user_invitation_path, class: 'btn btn-primary pull-right' %>
  <h1>Users</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.firstname %> <%= user.lastname %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td><%#= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
